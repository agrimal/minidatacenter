$ORIGIN .
$TTL    86400                          ; 1 day
{{ item.ptr_zone }}    IN  SOA {{ item.ns_url }}. {{ item.ns_contact }} (
                                1       ; serial
                                14400   ; refresh
                                3600    ; retry
                                604800  ; expire
                                86400 ) ; cache TTL

                        NS      {{ item.ns_url }}.
                        TXT     "DNS server for zone {{ item.ptr_zone }}"

$ORIGIN {{ item.ptr_zone }}
