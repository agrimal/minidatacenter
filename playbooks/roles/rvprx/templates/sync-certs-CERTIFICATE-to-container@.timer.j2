[Unit]
Description=Run sync-certs-{{ (letsencrypt.domains | selectattr('cert_id', 'equalto', item.cert_id) | list).0.domains.0 }}-to-container@%i.service once a day - Generated by Ansible
Documentation=https://github.com/agrimal/minidatacenter

[Timer]
OnCalendar=*-*-* 01:00:00
Persistent=true
RandomizedDelaySec=600

[Install]
WantedBy=timers.target
